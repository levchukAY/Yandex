<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_vertical|center_horizontal">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin">

        <TextView
            android:text="@string/choose_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fab_margin"
            android:textColor="?attr/android:textColorPrimary"
            android:textSize="18sp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/half_margin">

            <RadioButton
                android:text="@string/standart_size"
                android:id="@+id/radioButton"
                android:drawableTop="@drawable/ic_standart"
                android:button="@drawable/button_background_red"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:textColor="?attr/android:textColorPrimary"
                android:layout_margin="@dimen/fab_margin"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:gravity="bottom|center_horizontal"
                android:background="@drawable/radio_button"
                android:paddingBottom="@dimen/fourth_margin"
                android:paddingTop="@dimen/half_margin"
                android:checked="true" />

            <RadioButton
                android:text="@string/large_size"
                android:drawableTop="@drawable/ic_large"
                android:button="@drawable/button_background_red"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/radioButton2"
                android:textColor="?attr/android:textColorPrimary"
                android:layout_margin="@dimen/fab_margin"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:gravity="bottom|center_horizontal"
                android:background="@drawable/radio_button"
                android:paddingBottom="@dimen/fourth_margin"
                android:paddingTop="@dimen/half_margin" />

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin">

        <TextView
            android:text="@string/choose_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fab_margin"
            android:textColor="?attr/android:textColorPrimary"
            android:textSize="18sp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="@dimen/half_margin"
            android:gravity="center"
            android:layout_gravity="center">

            <RadioButton
                android:text="@string/light"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/radioButton3"
                android:drawableTop="@drawable/ic_light"
                android:button="@drawable/button_background_red"
                android:layout_margin="@dimen/fab_margin"
                android:textColor="?attr/android:textColorPrimary"
                android:textAllCaps="false"
                android:background="@drawable/radio_button"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="@dimen/fourth_margin"
                android:checked="true" />

            <RadioButton
                android:text="@string/dark"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/radioButton4"
                android:drawableTop="@drawable/ic_dark"
                android:button="@drawable/button_background_red"
                android:layout_margin="@dimen/fab_margin"
                android:textColor="?attr/android:textColorPrimary"
                android:textAllCaps="false"
                android:background="@drawable/radio_button"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="@dimen/fourth_margin" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>